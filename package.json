{
  "name": "wordsabxy",
  "version": "1.0.0",
  "description": "Word memorization app with Xbox controller support",
  "main": "electron/main.js",
  "scripts": {
    "dev": "vite",
    "electron": "electron . --dev",
    "start": "concurrently \"vite\" \"wait-on http://localhost:5173 && electron . --dev\"",
    "build": "vite build",
    "dist": "vite build && electron-builder"
  },
  "build": {
    "appId": "com.wordsabxy.app",
    "productName": "Words ABXY",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "electron/main.js",
      "dist/**/*"
    ],
    "win": {
      "target": "nsis"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/forTheMoon33/WordsABXY.git"
  },
  "keywords": [
    "word",
    "memorization",
    "xbox",
    "controller",
    "education"
  ],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/forTheMoon33/WordsABXY/issues"
  },
  "homepage": "https://github.com/forTheMoon33/WordsABXY#readme",
  "devDependencies": {
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "vite": "^5.0.8",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "exceljs": "^4.4.0",
    "jszip": "^3.10.1",
    "lucide-react": "^0.263.1",
    "papaparse": "^5.5.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
